{
  "manifest_version": 2,
  "name": "Slack RTL",
  "description": "Right To Left support for slack. Support multiple RTL languages like Hebrew, Arabic, Farsi and more",
  "options_page": "options.html",
  "version": "0.2",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*.slack.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.slack.com/*"
      ],
      "js": [
        "slack-rtl.js"
      ]
    }
  ]
}